pipeline{
    agent any
    stages{
        stage("Build"){
            steps{
                echo "Building code using Maven"
            }
        }
        stage("Unit and Integration tests"){
            steps{
                echo "Running unit tests using tool: NUnit"
                echo "Running integration tests using tool: Testsima"
            }
            post{
                always{
                    emailext(
                        to: "zhujames001@gmail.com",
                        subject: "Unit and Integration Test",
                        body: "Unit and Integration Test status: ${currentBuild.currentResult}"
                    )
                }
            }
        }
        stage("Code Analysis"){
            steps{
                echo "Analysing code for standard tests, running through SonarQube"
            }
        }
        stage("Security Scan"){
            steps{
                echo "Performing security scans using tool: OWASP Dependency-Check"
            }
            post{
                always{
                    mail to: "zhujames001@gmail.com",
                    subject: "Security Scan",
                    body: "Security scan result status: ${currentBuild.result}"
                }
            }
        }
        stage("Deploy to staging"){
            steps{
                echo "Deploying application to staging events using tool: Amazon Web services(AWS)"
            }
        }
        stage("Integration Tests on Staging"){
            steps{
                echo "Running integration tests on staging using tool: Selenium"
            }
        }
        stage("Deploy to Production"){
            steps{
                echo "Deploying application to production using Amazon Web services(AWS)"
            }
        }
    }
}
